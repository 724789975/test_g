<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="AbstractPartnerUser">
	<typeAlias alias="PartnerUserObject" type="com.pde.uweb.database.partner.partneruser.PartnerUserPojo" />
	<resultMap id="partneruserResult" class="PartnerUserObject">
		<result property="userId" column="USER_ID_B" jdbcType="NUMBER" />
		<result property="partnerId" column="PARTNER_ID_V" jdbcType="VARCHAR" />
		<result property="gameAccount" column="GAME_ACCOUNT_V" jdbcType="VARCHAR" />
		<result property="password" column="PASSWORD_V" jdbcType="VARCHAR" />
		<result property="email" column="EMAIL_V" jdbcType="VARCHAR" />
		<result property="status" column="STATUS_I" jdbcType="NUMBER" />
		<result property="createDate" column="CREATE_DATE_D" jdbcType="DATETIME" />
		<result property="lastModifyDate" column="LAST_MODIFY_DATE_D" jdbcType="DATETIME" />
		<result property="version" column="VERSION_B" jdbcType="NUMBER" />
	</resultMap>
	<resultMap id="partneruserVersion" class="java.lang.Long">
		<result property="version" column="VERSION_B" jdbcType="NUMBER" />
	</resultMap>

	<!-- insert -->
	<insert id="insert" parameterClass="PartnerUserObject">
		insert into PARTNER_USER (USER_ID_B,CREATE_DATE_D,VERSION_B,LAST_MODIFY_DATE_D
		<dynamic>
			<isNotNull prepend="," property="partnerId">PARTNER_ID_V</isNotNull>
			<isNotNull prepend="," property="gameAccount">GAME_ACCOUNT_V</isNotNull>
			<isNotNull prepend="," property="password">PASSWORD_V</isNotNull>
			<isNotNull prepend="," property="email">EMAIL_V</isNotNull>
			<isNotNull prepend="," property="status">STATUS_I</isNotNull>
		</dynamic>
		) values(#userId#, NOW(), 1, NOW()
		<dynamic>
			<isNotNull prepend="," property="partnerId">#partnerId#</isNotNull>
			<isNotNull prepend="," property="gameAccount">#gameAccount#</isNotNull>
			<isNotNull prepend="," property="password">#password#</isNotNull>
			<isNotNull prepend="," property="email">#email#</isNotNull>
			<isNotNull prepend="," property="status">#status#</isNotNull>
		</dynamic>
		)
	</insert>

	<!-- select -->
	<select id="select" resultMap="partneruserResult" parameterClass="java.lang.Long">
		SELECT
			USER_ID_B,
			PARTNER_ID_V,
			GAME_ACCOUNT_V,
			PASSWORD_V,
			EMAIL_V,
			STATUS_I,
			CREATE_DATE_D,
			LAST_MODIFY_DATE_D,
			VERSION_B
		FROM PARTNER_USER
		WHERE USER_ID_B = #id#
	</select>

	<!-- update all columns -->
	<update id="update" parameterClass="PartnerUserObject">
		UPDATE PARTNER_USER SET
			VERSION_B = VERSION_B + 1,
			LAST_MODIFY_DATE_D = NOW(),
			PARTNER_ID_V = #partnerId#,
			GAME_ACCOUNT_V = #gameAccount#,
			PASSWORD_V = #password#,
			EMAIL_V = #email#,
			STATUS_I = #status#
		WHERE USER_ID_B = #userId# AND VERSION_B = #version#
	</update>

	<!-- only update "not null" columns -->
	<update id="updateForField" parameterClass="PartnerUserObject">
		UPDATE PARTNER_USER SET
		VERSION_B = VERSION_B + 1,
		LAST_MODIFY_DATE_D = NOW()
		<dynamic>
			<isNotNull prepend="," property="partnerId">PARTNER_ID_V = #partnerId#</isNotNull>
			<isNotNull prepend="," property="gameAccount">GAME_ACCOUNT_V = #gameAccount#</isNotNull>
			<isNotNull prepend="," property="password">PASSWORD_V = #password#</isNotNull>
			<isNotNull prepend="," property="email">EMAIL_V = #email#</isNotNull>
			<isNotNull prepend="," property="status">STATUS_I = #status#</isNotNull>
		</dynamic>
		WHERE USER_ID_B = #userId# AND VERSION_B = #version#
	</update>

	<!-- delete -->
	<delete id="delete" parameterClass="java.util.Map">
		DELETE FROM PARTNER_USER
		WHERE USER_ID_B = #id#
		AND VERSION_B = #version#
	</delete>

	<!-- get version -->
	<select id="getVersion" resultMap="partneruserVersion" parameterClass="java.lang.Long">
		SELECT VERSION_B
		FROM PARTNER_USER
		WHERE USER_ID_B = #id#
	</select>

</sqlMap>
