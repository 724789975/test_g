<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="SysModeConfig">

 	<!-- Use type aliases to avoid typing the full classname every time. -->
 	<typeAlias alias="SysModeConfig" type="com.pearl.o2o.pojo.SysModeConfig"/> 	

	<resultMap id="selectResult" class="SysModeConfig">
		<result property="type" column="TYPE"/>
		<result property="config" column="CONFIG"/>
	</resultMap>
  
	<select id="select" resultMap="selectResult" parameterClass="java.lang.Integer">
		select * from SYS_MODE_CONFIG where TYPE=#value#;
	</select> 
	<update id="update" parameterClass="SysModeConfig">
	 	update SYS_MODE_CONFIG set CONFIG=#config# where TYPE=#type#;
	</update> 
	<insert id="insert" parameterClass="SysModeConfig">
		insert into SYS_MODE_CONFIG(TYPE,CONFIG) values(#type#,#config#);
	</insert>
</sqlMap>