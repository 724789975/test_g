<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PlayerMission">

 	<!-- Use type aliases to avoid typing the full classname every time. -->
 	<typeAlias alias="PlayerMission" type="com.pearl.o2o.pojo.PlayerMission"/> 	
	
	<resultMap id="selectPlayerMissionResult" class="PlayerMission">
		<result property="id" column="ID"/>
		<result property="playerId" column="PLAYER_ID"/>
		<result property="sysMissionId" column="SYS_MISSION_ID"/>							
	</resultMap>  
	
	<select id="selectPlayerMission" parameterClass="java.lang.Integer" resultMap="selectPlayerMissionResult">
   	 	select 		
   	 		pm.ID,
   	 		pm.PLAYER_ID,
   	 		pm.SYS_MISSION_ID
    	from PLAYER_MISSION pm
    	where pm.PLAYER_ID = #value#
	</select>				    
</sqlMap>