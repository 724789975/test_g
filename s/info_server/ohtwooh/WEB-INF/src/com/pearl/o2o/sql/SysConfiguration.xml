<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="SysConfiguration">
<typeAlias alias="SysConfiguration" type="com.pearl.o2o.pojo.SysConfiguration"/> 

	<select id="select" parameterClass="java.lang.String" resultClass="java.lang.String">
		select VALUE from SYS_CONFIG where `KEY` = #key#;
	</select>
	
	<update id="update" parameterClass="java.util.Map">
		update SYS_CONFIG
			set `VALUE`=#value#
			where `KEY` = #key#
	</update>
</sqlMap>