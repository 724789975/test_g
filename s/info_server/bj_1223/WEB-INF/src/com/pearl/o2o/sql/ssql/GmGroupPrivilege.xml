<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="GmGroupPrivilege">

	<insert id="insert" parameterClass="java.util.Map">
		insert into GM_GROUP_PRIVILEGE (
			GROUP_ID,
			PRIVILEGE_ID
		) 
		values (
			#groupId#,
			#privId#
		);
		<selectKey resultClass="int" keyProperty="id">
			SELECT @@IDENTITY AS ID
		</selectKey>
	</insert>
	
	<delete id="delete" parameterClass="java.util.Map">
		delete from GM_GROUP_PRIVILEGE 
		<dynamic prepend="WHERE">
			<isNotNull prepend="AND" property="groupId">
				GROUP_ID = #groupId#		
			</isNotNull>
			<isNotNull property="groups">
				<isNotEmpty property="groups" prepend="AND">
					<iterate property="groups" open="(" close=")" conjunction="OR">
						GROUP_ID = #groups[].id#				
					</iterate>			
				</isNotEmpty>		
			</isNotNull>	
		</dynamic>
	</delete>
</sqlMap>
	