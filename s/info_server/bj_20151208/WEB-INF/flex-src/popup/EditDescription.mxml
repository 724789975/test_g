<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300" horizontalAlign="center">
<mx:Script>
	<![CDATA[
		import utils.DatagridValidateFactory;
		import mx.validators.Validator;
		import mx.managers.PopUpManager;
		private var _des:String;
		[Bindable]
		public function set des(value:String):void{
			_des=value;
		}
		public function get des():String{
			return _des;
		}
		
		private function removeMe():void{
			PopUpManager.removePopUp(this);
		}
		
		private function saveDes():void{
			var validate:Validator=DatagridValidateFactory.getSysitemValidator("description",description);
            if(validate!=null){
	            var val:*=validate.validate();
	            if(val.type=="valid"){
	            	removeMe();
	            }
	        }
		}
	]]>
</mx:Script>
<mx:VBox>
	<mx:TextArea id="description" text="{des}" width="300" height="200"/>
	<mx:HBox>
		<mx:Button id="saveBtn" label="保存" click="saveDes()"/>
		<mx:Button id="cancelBtn" label="取消" click="removeMe()"/>
	</mx:HBox>
</mx:VBox>
		
</mx:Panel>
